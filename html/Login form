  <script>
    const form = document.getElementById('loginForm');
    const email = document.getElementById('email');
    const pwd = document.getElementById('password');
    const emailError = document.getElementById('emailError');
    const pwError = document.getElementById('pwError');
    const toggle = document.getElementById('togglePw');

    toggle.addEventListener('click', () => {
      const shown = pwd.type === 'text';
      pwd.type = shown ? 'password' : 'text';
      toggle.textContent = shown ? 'Show' : 'Hide';
      toggle.setAttribute('aria-pressed', String(!shown));
    });

    function validateEmail(value) {
      // simple email regex (client-side only)
      return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(value);
    }

    form.addEventListener('submit', (e) => {
      e.preventDefault();
      let ok = true;

      if (!email.value.trim() || !validateEmail(email.value.trim())) {
        emailError.style.display = 'block';
        emailError.textContent = 'Please enter a valid email address.';
        ok = false;
      } else {
        emailError.style.display = 'none';
      }

      if (!pwd.value || pwd.value.length < 6) {
        pwError.style.display = 'block';
        pwError.textContent = 'Password must be at least 6 characters.';
        ok = false;
      } else {
        pwError.style.display = 'none';
      }

      if (!ok) return;

      // Replace this with real form submission (fetch/XHR) to your backend.
      // For demo: show a quick success message then reset.
      alert('Form validated (client-side). Submit to backend or use fetch to authenticate.');
      // form.submit(); // uncomment to perform native submit if action is set
    });

    // Optional: simple "Enter" key accessibility (already default but keep safe)
    email.addEventListener('keydown', (ev) => {
      if (ev.key === 'Enter') ev.preventDefault();
    });
  </script>
